{
  "name": "@pixora-craftt/shared",
  "version": "1.0.0",
  "description": "Shared utilities and types for Pixora Craftt microservices",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist"
  },
  "dependencies": {
